<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.VenueDetailsFragment">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_180"
        android:background="@drawable/hero_image"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/rounded_white_20"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="@string/logout"
        android:textColor="@color/black_2c2c31"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_2c2c31"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/sp_17"
        android:layout_marginStart="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImg"
        tools:text="@string/ocean_drive_placeholder" />

    <TextView
        android:id="@+id/barTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_2c2c31"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="@id/placeTxt"
        app:layout_constraintTop_toBottomOf="@id/placeTxt"
        tools:text="@string/welcome_placeholder" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_92C2C31"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="@id/placeTxt"
        app:layout_constraintTop_toBottomOf="@id/barTxt"
        tools:text="@string/poke_bar_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>
